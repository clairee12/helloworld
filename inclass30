#include <iostream>
#include <cstdlib>
#include <string>
using namespace std;

int main(){
    cout << 'enter a number';
    int num;
    cin >> num;

    int step;
    if (num%2==0)
        step = 1;
    else
        step=2;
    
    step = (num % 2 == 0) ? 1 : 2;
    

    cout << 'the divisors of ' << num << 'are: ';
    for (int i = 1; i <= num/2; i += step) {
        if (num % i == 0) {
            cout << i << ',';
        }
    cout << endl;
    return 0;
}